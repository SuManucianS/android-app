<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ngok" />

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/circleimage_user"
        android:layout_toRightOf="@+id/circleimage_user"
        android:text="Ngokcac"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_user_on"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/tvusername"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/circleimage_user"
        android:layout_toRightOf="@+id/circleimage_user"
        android:src="@drawable/ngok"
        android:visibility="gone"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="10dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_user_off"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/tvusername"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/circleimage_user"
        android:layout_toRightOf="@+id/circleimage_user"
        android:src="@drawable/ngok"
        android:visibility="gone"
        app:civ_border_color="#4FAC01"
        app:civ_border_width="10dp" />



</RelativeLayout>